{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext", // Use 'esnext' for ES Modules
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./", // Ensure this is the root directory of your source files
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "tasks/**/*.ts"],
  "exclude": ["node_modules", "src/helpers"]
}
